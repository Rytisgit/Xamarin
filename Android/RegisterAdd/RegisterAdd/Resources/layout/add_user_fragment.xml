<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chrisrisner.fragmentsample.FragmentOne">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:id="@+id/textviewFirstname"
            android:textSize="10sp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firstname"
            android:maxLines="1"
            android:inputType="text"
            android:layout_below="@id/textviewFirstname"
            android:id="@+id/editTextFirstnameReg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:id="@+id/textviewLastname"
            android:layout_below="@id/editTextFirstnameReg"
            android:textSize="10sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname"
            android:layout_below="@id/textviewLastname"
            android:maxLines="1"
            android:inputType="text"
            android:id="@+id/editTextLastnameReg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/textviewUsername"
            android:layout_below="@id/editTextLastnameReg"
            android:textSize="10sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:maxLines="1"
            android:inputType="text"
            android:layout_below="@id/textviewUsername"
            android:id="@+id/editTextUsernameReg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="10sp"
            android:id="@+id/textviewPassword"
            android:layout_below="@id/editTextUsernameReg"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:maxLines="1"
            android:inputType="text"
            android:password="true"
            android:id="@+id/editTextPasswordReg"
            android:layout_below="@id/textviewPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="10sp"
            android:id="@+id/textviewConfirmPassword"
            android:layout_below="@id/editTextPasswordReg"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:maxLines="1"
            android:inputType="text"
            android:password="true"
            android:id="@+id/editTextPasswordRegRepeat"
            android:layout_below="@id/textviewConfirmPassword"/>
        <Button
            android:id="@+id/buttonRegisterReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondaryDarkColor"
            android:textColor="@color/primaryTextColor"
            android:layout_below="@id/editTextPasswordRegRepeat"
            android:text="@string/add"/>
    </RelativeLayout>
</FrameLayout>