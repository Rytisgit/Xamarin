<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinNDKSample"
             x:Class="XamarinNDKSample.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Add integers via native C++" 
           HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold"/>
        <Entry x:Name="entryA" Placeholder="a"/>
        <Entry x:Name="entryB" Placeholder="b"/>
        <Label Text="0" x:Name="labelResult" FontSize="Medium" FontAttributes="Bold"/>
        <Button Text="Add" x:Name="buttonGetResult" Clicked="ButtonGetResult_Clicked"/>
    </StackLayout>

</ContentPage>
